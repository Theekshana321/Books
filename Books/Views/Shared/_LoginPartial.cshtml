@using Books.Domain.Entities;
@using Microsoft.AspNetCore.Identity;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item mx-2">
            <a id="manage" class="btn dropdown-toggle" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="background-color: #6c757d; color: white; font-family: 'Arial', sans-serif;">
                <i class="bi bi-person-badge"></i>
                Hello @(User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value)!
            </a>
        </li>
        <li class="nav-item mx-2">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn" style="background-color: #f44336; color: white; font-family: 'Arial', sans-serif;">
                    <i class="bi bi-box-arrow-in-right"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item mx-2">
            <a class="btn" id="register" asp-area="Identity" asp-page="/Account/Register" style="background-color: #2196F3; color: white; font-family: 'Arial', sans-serif;">
                <i class="bi bi-person-plus"></i> Register
            </a>
        </li>
        <li class="nav-item mx-2">
            <a class="btn" id="login" asp-area="Identity" asp-page="/Account/Login" style="background-color: #4CAF50; color: white; font-family: 'Arial', sans-serif;">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
        </li>
    }
</ul>

@section Styles {
    <style>
        .nav-item {
            margin: 0 10px;
        }

        .btn {
            font-family: 'Arial', sans-serif;
        }

            .btn:hover {
                filter: brightness(85%);
            }
    </style>
}
